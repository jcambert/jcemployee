<div ng-controller="employeeEditController" ng-init="id=<%=employee%>" flex>
        <md-content class="md-padding" layout-xs="column" layout="row"  ng-if="employee">
    
            <div flex layout="column" class="boxWithHeight" layout-padding>
    
                <md-content flex ng-cloak>
                    <md-toolbar class="md-hue-2">
                        <div class="md-toolbar-tools">
                            <h3>
                                <span>Gestion de {{employee.nom}} {{employee.prenom}}</span>
                            </h3>
                            <md-button class="md-fab md-primary" aria-label="Use Android" ng-click="go('/?controller=employee&view=add')">
                                <md-tooltip md-direction="left">Ajouter un employee</md-tooltip>
                                <md-icon md-svg-src="img/icons/android.svg"></md-icon>
                            </md-button>
                            <md-switch class="md-secondary" ng-model="solde">
                                <md-tooltip md-direction="left">Voir les employes sortis de l'entreprise</md-tooltip>
                            </md-switch>
                        </div>
                    </md-toolbar>
                    <md-list>
    
                        <md-list-item ng-repeat="employee in employees | filter:isSolde">
                        <p ng-click="go('/?controller=employee&view=edit')"> {{ employee.nom}} {{employee.prenom}} <md-tooltip position="left">Clicker pour configurer {{employee.prenom}}</md-tooltip></p>
                                    
            
                            
    
                            <md-button class="md-fab md-primary" aria-label="Use Android" ng-click="removeEmployee($index)">
                                <md-tooltip md-direction="left">Supprimer {{employee.nom}} {{employee.prenom}}</md-tooltip>
                                <md-icon md-svg-src="img/icons/android.svg"></md-icon>
                            </md-button>
                            <md-button class="md-fab md-primary" aria-label="Use Android" ng-click="soldeEmployee($index)">
                                <md-tooltip md-direction="left">Sortir {{employee.nom}} {{employee.prenom}}</md-tooltip>
                                <md-icon md-svg-src="img/icons/android.svg"></md-icon>
                            </md-button>
                            <md-divider></md-divider>
                        </md-list-item>
    
                    </md-list>
                </md-content>
            </div>
        </md-content>
    </div>