<div ng-controller="stateController" flex>
    <md-content class="md-padding" layout-xs="column" layout="row">

        <div flex layout="column" class="boxWithHeight" layout-padding>

            <md-content flex ng-cloak>
                <md-toolbar class="md-hue-2">
                    <div class="md-toolbar-tools">
                        <h3>
                            <span>Pr√©sences</span>
                        </h3>
                        <md-button class="md-fab md-primary" aria-label="Use Android" ng-click="go('/?controller=presence&view=config')">
                            <md-tooltip md-direction="left">Parametrage</md-tooltip>
                            <md-icon md-svg-src="img/icons/android.svg"></md-icon>
                        </md-button>
                        <md-button class="md-fab md-primary" aria-label="Use Android" ng-click="go('/?controller=presence&view=employee')">
                            <md-tooltip md-direction="left">Gestion des employees</md-tooltip>
                            <md-icon md-svg-src="img/icons/android.svg"></md-icon>
                        </md-button>
                    </div>
                </md-toolbar>
                <md-list>

                    <md-list-item ng-repeat="employee in employees">
                        <p> {{ employee.nom}} {{employee.prenom}} </p>
                        <md-switch class="md-secondary" ng-true-value="'Present'" ng-false-value="'Sorti'" ng-model="employee.etat" ng-disabled="true"></md-switch>
                        <md-button class="md-fab md-primary" aria-label="Use Android">
                            <md-tooltip md-direction="left">Modifier les pointages de {{employee.prenom}}</md-tooltip>
                            <md-icon md-svg-src="img/icons/android.svg"></md-icon>
                        </md-button>
                        <md-button class="md-fab md-primary" aria-label="Use Android">
                            <md-tooltip md-direction="left">Configurer {{employee.prenom}}</md-tooltip>
                            <md-icon md-svg-src="img/icons/android.svg"></md-icon>
                        </md-button>
                        <md-divider></md-divider>
                    </md-list-item>

                </md-list>
            </md-content>
        </div>
    </md-content>
</div>