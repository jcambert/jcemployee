<div ng-controller="pointageController" flex>
    <md-content class="md-padding" layout-xs="column" layout="row">
        <div flex="40" layout="column" class="boxWithHeight" layout-padding>
            <md-content>
                <ds-widget-clock theme="Blue-Light" show-secs="true" digital-format="'HH:mm:ss'"></ds-widget-clock>
            </md-content>
        </div>
        <div flex layout="column" class="boxWithHeight" layout-padding>
            <md-content flex="25">
                <md-toolbar class="md-hue-2">
                    <div class="md-toolbar-tools">
                        <h3>
                            <span>Presence</span>
                        </h3>
                    </div>
                </md-toolbar>

                <div>
                    <form name="userForm">

                        <div layout-gt-xs="row">
                            <md-input-container class="md-block" flex-gt-xs>
                                <label>Numero de badge</label>
                                <input ng-model="user.badge" ng-enter="onBadgeEnter()">
                            </md-input-container>

                            <!-- <md-button class="md-fab md-primary" aria-label="Use Android">
                            <md-icon md-svg-src="img/icons/android.svg"></md-icon>
                        </md-button>-->
                        </div>



                    </form>
                </div>
            </md-content>
            <md-content flex="25" ng-if="employee" ng-cloak>
                <md-card>
                    <md-card-title>
                        <md-card-title-text>
                            <span class="md-headline">{{employee.nom}}</span>
                            <span class="md-subhead">{{employee.prenom}}</span>
                        </md-card-title-text>
                    </md-card-title>

                </md-card>
            </md-content>
            <md-content flex ng-cloak ng-if="pointages">
                <md-toolbar class="md-hue-2">
                    <div class="md-toolbar-tools">
                        <h3>
                            <span>Pr√©sences</span>
                        </h3>
                    </div>
                </md-toolbar>
                <md-list>

                    <md-subheader class="md-no-sticky">Vos Pointages</md-subheader>
                    <md-list-item ng-repeat="pointage in pointages">
                        <p> {{ pointage.date | date:'dd/MM/yyyy'}} </p>
                        <p> {{ pointage.entree | number:2 }} </p>
                        <p> {{ pointage.sortie | number:2}} </p>

                        <md-divider></md-divider>
                    </md-list-item>

                </md-list>
            </md-content>
        </div>
    </md-content>
</div>